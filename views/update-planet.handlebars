<html>
<h1>Update {{selectPlanet.name}}:</h1>
<form id="update-planet" action="/planets" method="post">
    Name: <input type="text" name="name" value="{{selectPlanet.name}}"><br>
    Realm: <select name="realm" id="realm-selector"> 
        {{#each realm}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
</form>
<button onclick="updatePlanet({{selectPlanet.id}})">Update</button>
<script defer>selectRealm({{selectPlanet.homeplanet}});</script>
</html>
